<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="WS1PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>org.tyaa.ws.entity.Shop</class>
    <class>org.tyaa.ws.entity.Barrel</class>
    <class>org.tyaa.ws.entity.Sale</class>
    <class>org.tyaa.ws.entity.Car</class>
    <class>org.tyaa.ws.entity.Driver</class>
    <class>org.tyaa.ws.entity.BarrelCapacity</class>
    <class>org.tyaa.ws.entity.WaterType</class>
    <class>org.tyaa.ws.entity.DayReport</class>
    <class>org.tyaa.ws.entity.DayReportItem</class>
    <class>org.tyaa.ws.entity.DebtChange</class>
    <class>org.tyaa.ws.entity.Settings</class>
    <class>org.tyaa.ws.entity.User</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/water_sales?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
  </persistence-unit>
</persistence>
